@model FuelLog.Models.FuelingModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/js/fuelingjs.js")" type="text/javascript"></script>
<h1>Create</h1>

<h4>FuelingModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" name="CreateFueling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
            -->
            <select name="user" id="user"
                    asp-items="@ViewBag.Users"
                    onchange="DoPostBack();">
            </select>
            <select name="VehicleId" id="VehicleId"
                    asp-items="@ViewBag.Vehicles"
                    disabled="@(ViewBag.StateEnabled == false ? "disabled" : null)">
            </select>
            <!--
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class="form-control" />
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
                -->
            <div class="form-group">
                <label asp-for="Milages" class="control-label"></label>
                <input asp-for="Milages" class="form-control" />
                <span asp-validation-for="Milages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelAmount" class="control-label"></label>
                <input asp-for="FuelAmount" class="form-control" />
                <span asp-validation-for="FuelAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelingDate" class="control-label"></label>
                <input asp-for="FuelingDate" class="form-control" />
                <span asp-validation-for="FuelingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div id="spinner" class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
</div>

<div>
    <h3>@Html.Raw(ViewBag.Result)</h3>
</div>
<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
